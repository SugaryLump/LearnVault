extends layout
block content
  .modal(id="display")
  .w3-card-4
    header.w3-container.w3-indigo
      h2 Resource List #[a.w3-button.w3-round.w3-blue(href="/resources/new") +]
    .w3-container
      table.w3-table.w3-bordered
        tr
          th Title
          th Type
          th Description
          th Creation Date
          th Visibility
          th Author
          th Resource Path

        each r in resources
          tr
            td= r.title
            td= r.type
            td= r.description
            td= r.creationDate
            if r.isPublic
              td Public
            else
              td Private
            td= r.author
            td= r.resourcePath


    .footer.w3-container.w3-indigo
      address Generated by LearnVault in #{d}
