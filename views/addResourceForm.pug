extends layout
block content
  .w3-card-4
    header.w3-indigo
      h2 Upload a resource
    form.w3-container(method='POST' enctype='multipart/form-data')
        fieldset
            legend Resource
            label.w3-text-indigo
                b Select file
            input.w3-input.w3-border.w3-light-grey(type='file' name='resource', required='required')
            label.w3-text-indigo
                b Titulo
            input.w3-input.w3-border.w3-light-grey(type='text' name='title', required='required')
            label.w3-text-indigo
                b Subtitulo
            input.w3-input.w3-border.w3-light-grey(type='text' name='subtitle')
            label.w3-text-indigo
                b Descrição
            input.w3-input.w3-border.w3-light-grey(type='text' name='description')
            label.w3-text-indigo
                b Tipo de Recurso
            select.w3-select.w3-border.w3-light-grey(name='type', required='required')
                option(value='report') Relatório
                option(value='thesis') Tese
                option(value='article') Artigo
                option(value='book') Livro
                option(value='slides') Apresentação
                option(value='test') Teste
                option(value='solved_exercise') Problema Resolvido
                option(value='application') Aplicação
                option(value='other') Outro
            label.w3-text-indigo
                b Data Criação
            input.w3-input.w3-border.w3-light-grey(type='date' name='creationDate', required='required')
            fieldset
                legend Visibilidade:
                div
                    input.w3-radio.w3-border.w3-light-grey(type='radio' name='visibility' value='public' checked='checked')
                    label(for='public') Público
                div
                    input.w3-radio.w3-border.w3-light-grey(type='radio' name='visibility' value='private')
                    label(for='private') Privado
            label.w3-text-indigo
                b Autor
            input.w3-input.w3-border.w3-light-grey(type='text' name='author')
            label.w3-text-indigo
                b Hashtags
            input.w3-input.w3-border.w3-light-grey(type='text' name='hashtags')
        input.w3-btn.w3-blue-grey(type='submit' value='Send')

    .footer.w3-container.w3-indigo
      address Generated by LearnVault in #{d}
