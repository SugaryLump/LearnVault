doctype html
html
  head
    title LearnVault
    link(rel='stylesheet', href='/stylesheets/dist.css')
    script(src='/js/alpine.js' defer)
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body
    if alerts
      .alerts
      each alert in alerts
        .alert=alert
    nav.flex.bg-primary-700.p-4.text-white.shadow-md.items-center.justify-between.mb-4
      a(href="/").font-bold.text-3xl.no-underline.text-white LearnVault
      .flex.items-center
        if user
          include components/userMenu
        else
            a(href='/login').text-button.small Login
    .container.mx-auto.px-4
      block nav
      if errors && errors.length > 0
        .rounded-md.bg-red-200.w-full.p-2.text-red-800.border.border-red-800
            p.text-xl Error
            each error in errors
              p= error
      if successes && successes.length > 0
        .rounded-md.bg-green-200.w-full.p-2.text-green-800.border.border-green-800
            p.text-xl Success
            each success in successes
              p= success
      block content

    script(src='/js/feather.min.js')
    script 
      | feather.replace()
