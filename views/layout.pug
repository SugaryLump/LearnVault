doctype html
html
  head
    title LearnVault
    link(rel='stylesheet', href='/stylesheets/dist.css')
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
  body
    if alerts
      .alerts
      each alert in alerts
        .alert=alert
    nav.flex.bg-primary-700.p-4.text-white.shadow-md.items-center.justify-between.mb-4
      div
        block nav
      .flex.items-center
        if user
          h2
            a(href='/profile')=user.name
          h2
            a(href='/logout' class='mr-4') Logout
        else
            a(href='/login' class='ml-4') Login
    .container.mx-auto.px-4
      block content
